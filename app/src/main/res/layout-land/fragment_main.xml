<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sammoin.commutewatcher.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/editWorkAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/enterWorkDateTimeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="@string/address_example" />

    <TextView
        android:id="@+id/workAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editWorkAddressTextView"
        android:layout_alignLeft="@+id/homeAddressTextView"
        android:text="@string/enter_work_address"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editHomeAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/homeAddressTextView"
        android:ems="10"
        android:hint="@string/alt_address_example" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/homeAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/enter_home_address"
        android:textSize="12sp" />

    <Button
        android:id="@+id/saveCommuteInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/save_commute_info"
        android:textSize="12sp" />

    <Button
        android:id="@+id/enterWorkDateTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveCommuteInfoButton"
        android:layout_alignRight="@+id/editWorkAddressTextView"
        android:text="@string/set_to_work_time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/userWorkDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/enterWorkDateTimeButton"
        android:layout_alignLeft="@+id/editWorkAddressTextView"
        android:layout_below="@+id/editWorkAddressTextView"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@+id/enterWorkDateTimeButton"
        android:layout_toStartOf="@id/enterWorkDateTimeButton"
        android:paddingTop="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/userHomeTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveCommuteInfoButton"
        android:layout_alignLeft="@+id/userWorkDateTimeTextView"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

</RelativeLayout>