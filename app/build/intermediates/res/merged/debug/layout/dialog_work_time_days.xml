<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compositeTimePickerInLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TimePicker
        android:id="@+id/dialog_work_time_days"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/date_time_work_commute"
        android:visibility="visible" >
    </TimePicker>

    <LinearLayout
        android:id="@+id/work_time_dialog_buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.37"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="5sp" >

        <ToggleButton
            android:id="@+id/sundayButton"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Su"
            android:textOff="Su"
            android:textOn="Su" />

        <ToggleButton
            android:id="@+id/mondayButton"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="M"
            android:textOff="M"
            android:textOn="M" />

        <ToggleButton
            android:id="@+id/tuesdayButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Tu"
            android:textOff="Tu"
            android:textOn="Tu" />

        <ToggleButton
            android:id="@+id/wednesdayButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="W"
            android:textOff="W"
            android:textOn="W" />

        <ToggleButton
            android:id="@+id/thursdayButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Th"
            android:textOff="Th"
            android:textOn="Th" />

        <ToggleButton
            android:id="@+id/fridayButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="F"
            android:textOff="F"
            android:textOn="F" />

        <ToggleButton
            android:id="@+id/saturdayButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Sa"
            android:textOff="Sa"
            android:textOn="Sa" />

    </LinearLayout>

