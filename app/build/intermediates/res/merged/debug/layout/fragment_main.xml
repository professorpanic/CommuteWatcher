<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sammoin.commutewatcher.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/homeAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/enter_home_address" />

    <EditText
        android:id="@+id/editHomeAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homeAddressTextView"
        android:layout_below="@+id/homeAddressTextView"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <TextView
        android:id="@+id/userWorkDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterWorkDateTimeButton"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/saveCommuteInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/save_commute_info" />

    <EditText
        android:id="@+id/editWorkAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exampleHomeAddressTextView"
        android:layout_alignRight="@+id/editHomeAddressTextView"
        android:layout_below="@+id/exampleHomeAddressTextView"
        android:layout_marginTop="40dp"
        android:ems="10" />

    <TextView
        android:id="@+id/exampleWorkAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exampleHomeAddressTextView"
        android:layout_below="@+id/editWorkAddressTextView"
        android:text="@string/address_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#696969"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/workAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editWorkAddressTextView"
        android:layout_below="@+id/exampleHomeAddressTextView"
        android:layout_marginTop="20dp"
        android:text="@string/enter_work_address" />

    <Button
        android:id="@+id/enterWorkDateTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/set_to_work_time" />

    <TextView
        android:id="@+id/exampleHomeAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editHomeAddressTextView"
        android:layout_below="@+id/editHomeAddressTextView"
        android:text="@string/alt_address_example"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#696969"
        android:textSize="12sp" />

</RelativeLayout><!-- From: file:/C:/Users/DoctorMondo/AndroidStudioProjects/CommuteWatcher1/app/src/main/res/layout/fragment_main.xml -->