<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.Bacon"
    android:clickable="true"
    android:backgroundTint="@android:color/white"
    android:background="@drawable/custom_ripple"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:orientation="horizontal"
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView

        android:id="@+id/commute_start_point_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="@string/start_point"/>

    <CheckBox
        android:id="@+id/commute_item_activeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:theme="@style/CommuteCheckBox"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/active"
        android:enabled="true"
        android:layout_gravity="end"
        android:clickable="true">

    </CheckBox>

    </GridLayout>
        <TextView

            android:id="@+id/commute_start_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:text="@string/start_time"
            android:paddingBottom="4dp" />



    <TextView

        android:id="@+id/commute_end_point_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="@string/end_point"/>


</LinearLayout>
